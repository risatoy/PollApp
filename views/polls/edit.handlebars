<div class="container container-fluid">
  <div class="field-container">

  <h1 class="text-center">Edit</h1>
  <br />

  <form action="/polls/{{poll.id}}?_method=PUT" method="POST">

    <div class="form-group">
      <div class="row">
        <label class="col-xs-3 control-label">Question </label>
      </div>
      <div class="row">
        <div class="col-xs-7">
          <input class="form-control" type="text" name="question" value="{{poll.question}}">
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-xs-3 control-label">Choices </label>
        {{#each poll.Choices}}
          <div class="col-xs-7">
            <input class="form-control" type="text" name="id" value="{{description}}">
          </div>
        {{/each}}

    </div>

    <div class="form-group">
        <div class="col-xs-7 col-xs-offset-3">
            <button type="submit" class="btn btn-default btn-success">Update</button>
        </div>
    </div>

  </form>

  <form class="delete-form" action="/polls/{{poll.id}}?_method=DELETE" method="POST">
      <input type="submit" class="btn btn-xs btn-danger" value="Delete">
  </form>
</div>

</div>
