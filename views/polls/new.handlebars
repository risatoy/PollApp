<div class="container container-fluid">
  <div class="field-container">
  <h1 class="text-center">Create new polls</h1>
  <br />

  <form action="/polls" method="POST" class="form-horizontal">
    <div class="form-group">
        <label class="col-xs-3 control-label">Question</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="question" />
        </div>
    </div>

    <div class="form-group control-group after-addButton">
        <label class="col-xs-3 control-label">Choices</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="choice[]" />
        </div>
        <div class="col-xs-2">
            <button type="button" class="btn btn-default addButton"><i class="glyphicon glyphicon-plus"></i></button>
        </div>
    </div>

    <!-- The option field template containing an option field and a Remove button -->
    <div class="copy hide">
      <div class="form-group control-group" style="margin-top:10px">
        <div class="col-xs-offset-3 col-xs-7">
            <input class="form-control" type="text" name="choice[]" />
        </div>
        <div class="col-xs-2">
            <button type="button" class="btn btn-default removeButton"><i class="glyphicon glyphicon-minus"></i></button>
        </div>
      </div>
    </div>

    <div class="form-group">
        <div class="col-xs-7 col-xs-offset-3">
            <button id="submit" type="submit" class="btn btn-default btn-success">Submit</button>
        </div>
    </div>
</form>

</div>
</div>
